# Example Terraform variables file
# Copy this file to terraform.tfvars and update the values

# AWS Configuration
aws_region = "us-east-1"
project_name = "jobboard"
environment = "dev"

# Database Configuration
db_password = "your-secure-password-here"
db_username = "jobboard_user"

# EC2 Configuration
instance_type = "t2.micro"
key_pair_name = "jobboard-key"

# Optional: Domain and SSL (for production)
# domain_name = "your-domain.com"
# certificate_arn = "arn:aws:acm:us-east-1:123456789012:certificate/xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx"

# Optional: S3 bucket for static assets
# s3_bucket_name = "your-unique-bucket-name"

# Optional: VPC Configuration (change only if needed)
# vpc_cidr = "10.0.0.0/16"
# public_subnet_cidrs = ["10.0.1.0/24", "10.0.2.0/24"]
# private_subnet_cidrs = ["10.0.3.0/24", "10.0.4.0/24"]
# availability_zones = ["us-east-1a", "us-east-1b"]

# Optional: RDS Configuration
# rds_instance_class = "db.t3.micro"
# rds_allocated_storage = 20
# backup_retention_period = 7
# deletion_protection = false
# multi_az = false

# Optional: Monitoring and Logging
# cloudwatch_retention = 30
# enable_monitoring = true

# Instructions:
# 1. Copy this file to terraform.tfvars
# 2. Update the values above with your actual configuration
# 3. Ensure db_password is a strong, unique password
# 4. Create a key pair in AWS with the name specified in key_pair_name
# 5. For production, consider enabling deletion_protection and multi_az